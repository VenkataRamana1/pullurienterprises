<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.img.pulluri">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
       >
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".ContactUs"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".WebMobileServices"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".CateringServices"
            android:label="@string/title_activity_catering_services"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".PaintingServices"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".HomeAutomation"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".EducationalServices"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".JobServices"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".ElectricalServices"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".DescriptionActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CategoryGrid"
            android:label="@string/title_activity_category_grid"
            android:theme="@style/ActionAppTheme" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".CategoryGrid"
            android:theme="@style/ActionAppTheme" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>